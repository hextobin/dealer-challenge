<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3">
  <h1>Sold Cars</h1>
  <%= link_to 'New Car', new_car_path, class: "btn btn-primary" %>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Make</th>
      <th>Model</th>
      <th>List Price</th>
      <th>Vin</th>
      <th>Color</th>
      <th>Body Style</th>
      <th>Year</th>
      <th>Sale Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.list_price %></td>
        <td><%= car.vin %></td>
        <td><%= car.color %></td>
        <td><%= car.body_style %></td>
        <td><%= car.year %></td>
        <td><%= car.sale_price %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>